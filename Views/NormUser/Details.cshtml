
@model BankAccount

@{
    ViewData["Title"] = "Estado de cuenta";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link href="~/css/site.css" rel="stylesheet">

<form method="post">
    <<div class="card" style="width: 18rem;">
        <h2>@ViewData["Title"]</h2>
        <div class="card-body">
            <h4>Cuenta de ahorro</h4>
            <table class="table table-borderless">
                <tr>
                    <td>Número de cuenta:</td>
                    <td></td>
                    <td></td>
                    <td>@Model.AccountNumber</td>
                </tr>
                <tr>
                    <td>Saldo disponible:</td>
                    <td></td>
                    <td></td>
                    <td>$@Model.AccountAmount</td>
                </tr>
            </table>
        </div>
    </div>

    <div>
        <button type="submit" asp-action="Details" asp-route-IdAccount="@Model.IdAccount" class="button button-accion">Transferencias</button>
        <a asp-action="Index" asp-controller="Home" class="button cerrar-sesion">Cerrar Sesión</a>
    </div>
</form>
