
@model User
@{
    ViewData["Title"] = "Crear usuario";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<title>Registro de usuario</title>

<h2>@ViewData["Title"]</h2>
<div>
    <form method="post" autocomplete="on" class="mb-3">
        <div class="col-md-6">
            <label>Nombre de usuario:</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="col-md-6">   
            <label>Email:</label>
            <input asp-for="Email" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label>Ingrese una contraseña:</label>
            <input asp-for="Password" class="form-control" type="password" required />
        </div>
        <div class="col-md-6">
            <label>Número de teléfono:</label>
            <input asp-for="Phone" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label>DNI:</label>
            <input asp-for="DNI" class="form-control" required />
        </div>
        <div class="col-md-6">
            <label>Rol:</label>
            <input asp-for="Role" class="form-control" required />
        </div>

        <div>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Cancelar</a>
            <button asp-action="Create" type="submit" class="btn btn-success">Registrarse</button>
        </div>
    </form>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

  