@model User
@{
    ViewData["Title"] = "Iniciar Sesion";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<h3>Iniciar sesion</h3>

<div>
    <form method="post" autocomplete="on">
        <div class="form-control">
            <label>Email:</label>
            <input asp-for="Email" class="form-control" type="email" required />
            <label>Contraseña:</label>
            <input asp-for="Password" class="form-control" type="password" required />
        </div>
        <div>
            <button type="submit" asp-action="Index" class="btn btn-success">Ingresar</button>
            <a asp-action="Index" asp-controller="Home" class="btn btn-danger">Regresar</a>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
