@{
    ViewData["Title"] = "Transferencias";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


<div Class="pt-16 px-16">
    <h3>Transferencias</h3>

    <form method="post" autocomplete="on">
        <div class="d-inline pa-2">
            <h4>Cuenta de ahorros</h4>
            <label style="font-size: 16px">Numero de cuenta</label>
        </div>
        <div style="margin-top: 10%;">
            <label>Monto:</label>
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">$</span>
                </div>
                <input type="number" class="form-control" required />
                <label class="input-group-text" style="font-size: 1rem;">
                    .
                    <input type="number" class="form-control" required />
                </label>
            </div>

            <div class="input-group">
                <label>Nombre del beneficiario:<input type="text" class="form-control" readonly /></label>
                <label>Número de cuenta:<input type="number" class="form-control" required /></label>
                <button class="btn btn-warning form-control position-absolute bottom-0 start-50" style="width: 10%;">Validar</button>

            </div>
        </div>
        <div class="btn-group" role="group" style="margin-top: 5%;">
            <button class="btn btn-danger">Cancelar</button>
            <button class="btn btn-success">Transferir</button>
        </div>
    </form>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>


