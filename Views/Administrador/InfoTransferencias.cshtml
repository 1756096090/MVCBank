
@model List<Transferencia>; 
@{
    ViewData["Title"] = "Administrar transferencias";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">

<h1>@ViewData["Title"]</h1>
<main>
    <section title="Tabla de transferencias">
        <table>
            <thead>
                <tr>
                    <th>Numero de cuenta del emisor</th>
                    <th>ID de la cuenta emisor</th>
                    <th>Numero de cuenta del emisor</th>
                    <th>ID de la cuenta receptor</th>
                    <th>Monto</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cuenta in Model)
                {
                    <tr>
                        @*<td>@cuenta.AccountNumberSender</td>*@
                        <td>@cuenta.IdAccountSender</td>
                        @*<td>@cuenta.AccountNumberReceiver</td>*@
                        <td>@cuenta.IdAccountReceiver</td>
                        <td>@cuenta.Amount</td>
                        <td><a class="btn btn-danger">Cancelar</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
    <section title="Botones">
        <div>
            <a class="button button-accion">Volver</a>
            <a class="button cerrar-sesion">Cerrar Sesión</a>
        </div>
    </section>
</main>