@model BankAccount
@{
    ViewData["Title"] = "Mostrar Cuenta";
}

<link rel="stylesheet" href="~/Views/styles.css" />

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>ID Account</label>
            <input type="text" class="form-control" value="@Model.IdAccount" readonly>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>ID User</label
            <input type="text" class="form-control" value="@Model.IdUser" readonly>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Account Number</label>
            <input type="text" class="form-control" value="@Model.AccountNumber" readonly>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="form-group">
            <label>Account Amount</label>
            <input type="text" class="form-control" value="@Model.AccountAmount" readonly>
        </div>
    </div>
</div>
